# Next.js Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=LoanEase Pro
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=true

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# UI Configuration
NEXT_PUBLIC_THEME_MODE=light
NEXT_PUBLIC_PRIMARY_COLOR=#1976d2

# Security Configuration
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_SECURE_COOKIES=false